<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.grocerylist.UserPhotoActivity">
    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:src="@drawable/ic_account_circle_grey600_48dp"/>
    <TextView
        android:id="@+id/take_picture_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_picture"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="8dp"
        android:background="?android:attr/selectableItemBackground"/>
    <TextView
        android:id="@+id/select_picture_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_picture"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="8dp"
        android:background="?android:attr/selectableItemBackground"/>
    <TextView
        android:id="@+id/remove_picture_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_picture"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="?android:attr/selectableItemBackground"/>
</LinearLayout>
